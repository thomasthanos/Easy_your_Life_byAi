<Window x:Class="MyApp.CrackSiteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crack Sites" Height="300" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Icon="hacker.ico">
    <Window.Resources>
        <!-- Electric Blue Color Palette -->
        <Color x:Key="AccentColor">#FF00B4FF</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <Color x:Key="DarkBackground">#FF121212</Color>
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackground}"/>

        <!-- Glow Effect -->
        <DropShadowEffect x:Key="ButtonGlow" Color="#00B4FF" BlurRadius="20" Opacity="0" Direction="0"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="2.5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00B4FF" BlurRadius="20" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Pressed Effect -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                                <Setter Property="BorderBrush" Value="#00C8FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Control Buttons -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#606060"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Background" Value="#2000B4FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4000B4FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style για τα ToolTips -->
        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF1E90FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Placement" Value="Bottom"/>
            <!-- Εμφάνιση κάτω από το κουμπί -->
            <Setter Property="HorizontalOffset" Value="0"/>
            <!-- Κεντράρισμα οριζόντια -->
            <Setter Property="VerticalOffset" Value="5"/>
            <!-- Απόσταση από το κουμπί -->
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Black" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsOpen" Value="True">
                    <Setter Property="Opacity" Value="1"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                From="0" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style για τα Info Buttons -->
        <Style x:Key="InfoButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="Foreground" Value="#FFD2691E"/>
            <!-- Αλλαγή χρώματος σε πιο έντονο -->
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FFFF4500"/>
                    <!-- Χρώμα hover -->
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation To="#FFFF4500" Duration="0:0:0.1" Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation To="#FFD2691E" Duration="0:0:0.1" Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
        
    </Window.Resources>

    <Grid>
        <!-- Main Content -->
        <Border Background="{StaticResource DarkBackgroundBrush}" CornerRadius="10" Margin="10"
                BorderBrush="{StaticResource AccentBrush}" BorderThickness="3.5">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="15" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <!-- Title Bar -->
                <Border Background="#FF252526" Height="40" VerticalAlignment="Top" CornerRadius="10 10 0 0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Title (Centered) -->
                        <TextBlock Text="Make Your Life Easier" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Grid.ColumnSpan="4" FontFamily="Segoe UI"/>

                        <!-- Back Button -->
                        <Button Grid.Column="1" Style="{StaticResource WindowButtonStyle}" Width="30" Height="30" Content="←" Click="BackButton_Click" Margin="0,0,5,0"/>

                        <!-- Minimize Button -->
                        <Button Grid.Column="2" Style="{StaticResource WindowButtonStyle}" Width="30" Height="30" Content="─" Click="MinimizeButton_Click" Margin="0,0,5,0"/>

                        <!-- Close Button -->
                        <Button Grid.Column="3" Style="{StaticResource WindowButtonStyle}" Width="30" Height="30" Content="✕" Click="CloseButton_Click" Margin="0,0,10,0"/>
                    </Grid>
                </Border>

                <!-- Buttons Section -->
                <Grid Margin="0,40,0,0">
                    <!-- Προσθέτουμε Margin="0,40,0,0" για να μετακινήσουμε τα κουμπιά κάτω από το Title Bar -->
                    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Left Column (Site Buttons - Tag="🌐") -->
                        <Button Grid.Column="0" Grid.Row="0" Style="{StaticResource ModernButtonStyle}" Content="Crack Site#1" Tag="🌐" Click="NavigateToLink_Click" Margin="5,2" Height="30" Width="150"/>
                        <Button Grid.Column="1" Grid.Row="0" Style="{StaticResource InfoButtonStyle}" Content="ℹ" Margin="2,2" Height="30" Width="20">
                            <Button.ToolTip>
                                <TextBlock>
                                    FileCR
                                </TextBlock>
                            </Button.ToolTip>
                        </Button>
                        <Button Grid.Column="0" Grid.Row="1" Style="{StaticResource ModernButtonStyle}" Content="Crack Site#2" Tag="🌐" Click="NavigateToLink_Click" Margin="5,2" Height="30" Width="150"/>
                        <Button Grid.Column="1" Grid.Row="1" Style="{StaticResource InfoButtonStyle}" Content="ℹ" Margin="2,2" Height="30" Width="20">
                            <Button.ToolTip>
                                <TextBlock>
                                    Download Pirate
                                </TextBlock>
                            </Button.ToolTip>
                        </Button>
                        <Button Grid.Column="0" Grid.Row="2" Style="{StaticResource ModernButtonStyle}" Content="Crack Site#3" Tag="🌐" Click="NavigateToLink_Click" Margin="5,2" Height="30" Width="150"/>
                        <Button Grid.Column="1" Grid.Row="2" Style="{StaticResource InfoButtonStyle}" Content="ℹ" Margin="2,2" Height="30" Width="20">
                            <Button.ToolTip>
                                <TextBlock>
                                    Pirate City
                                </TextBlock>
                            </Button.ToolTip>
                        </Button>
                        <Button Grid.Column="0" Grid.Row="3" Style="{StaticResource ModernButtonStyle}" Content="Crack Site#4" Tag="🌐" Click="NavigateToLink_Click" Margin="5,2" Height="30" Width="150"/>
                        <Button Grid.Column="1" Grid.Row="3" Style="{StaticResource InfoButtonStyle}" Content="ℹ" Margin="2,2" Height="30" Width="20">
                            <Button.ToolTip>
                                <TextBlock>
                                </TextBlock>
                            </Button.ToolTip>
                        </Button>

                        <!-- Right Column (Games Buttons - Tag="🎮") -->
                        <Button Grid.Column="2" Grid.Row="0" Style="{StaticResource ModernButtonStyle}" Content="Crack Games#1" Tag="🎮" Click="NavigateToLink_Click" Margin="5,2" Height="30" Width="150"/>
                        <Button Grid.Column="3" Grid.Row="0" Style="{StaticResource InfoButtonStyle}" Content="ℹ" Margin="2,2" Height="30" Width="20">
                            <Button.ToolTip>
                                <TextBlock>
                                    Repack Games
                                </TextBlock>
                            </Button.ToolTip>
                        </Button>
                        <Button Grid.Column="2" Grid.Row="1" Style="{StaticResource ModernButtonStyle}" Content="Crack Games#2" Tag="🎮" Click="NavigateToLink_Click" Margin="5,2" Height="30" Width="150"/>
                        <Button Grid.Column="3" Grid.Row="1" Style="{StaticResource InfoButtonStyle}" Content="ℹ" Margin="2,2" Height="30" Width="20">
                            <Button.ToolTip>
                                <TextBlock>
                                    Steam Unlocked
                                </TextBlock>
                            </Button.ToolTip>
                        </Button>
                        <Button Grid.Column="2" Grid.Row="2" Style="{StaticResource ModernButtonStyle}" Content="Crack Games#3" Tag="🎮" Click="NavigateToLink_Click" Margin="5,2" Height="30" Width="150"/>
                        <Button Grid.Column="3" Grid.Row="2" Style="{StaticResource InfoButtonStyle}" Content="ℹ" Margin="2,2" Height="30" Width="20">
                            <Button.ToolTip>
                                <TextBlock>
                                </TextBlock>
                            </Button.ToolTip>
                        </Button>
                        <Button Grid.Column="2" Grid.Row="3" Style="{StaticResource ModernButtonStyle}" Content="Crack Games#4" Tag="🎮" Click="NavigateToLink_Click" Margin="5,2" Height="30" Width="150"/>
                        <Button Grid.Column="3" Grid.Row="3" Style="{StaticResource InfoButtonStyle}" Content="ℹ" Margin="2,2" Height="30" Width="20">
                            <Button.ToolTip>
                                <TextBlock>
                                </TextBlock>
                            </Button.ToolTip>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>