<Window x:Class="multitool.DescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Περιγραφή Εφαρμογής" 
        Height="600" 
        Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Icon="icon.ico" FontWeight="Bold">

    <Window.Resources>
        <Style x:Key="WindowButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="FeatureCardStyle" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="#444444"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000" Opacity="0.5" BlurRadius="10" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FeatureCardHoverStyle" TargetType="{x:Type Border}" BasedOn="{StaticResource FeatureCardStyle}">
            <Setter Property="Background" Value="#555555"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#666666"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#000" Opacity="0.7" BlurRadius="15" ShadowDepth="5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Rectangle Fill="{TemplateBinding Background}" RadiusX="4" RadiusY="4"/>
                            <Track Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Background="#666666" Width="8">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                <Rectangle Fill="#666666" RadiusX="4" RadiusY="4"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Hyperlink Style -->
        <Style x:Key="ModernHyperlinkStyle" TargetType="{x:Type Hyperlink}">
            <Setter Property="Foreground" Value="#1E90FF"/>
            <Setter Property="TextDecorations" Value="None"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#00BFFF"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- GitHub Icon Style -->
        <Style x:Key="GitHubIconStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E1E" CornerRadius="15" Padding="10">
        <Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Panel.ZIndex="1">
                <Button Content="─" Width="30" Height="30" Style="{StaticResource WindowButtonStyle}" 
                        Click="MinimizeButton_Click"/>
                <Button Content="✕" Width="30" Height="30" Style="{StaticResource WindowButtonStyle}" 
                        Margin="10,0,0,0" Click="CloseButton_Click"/>
            </StackPanel>

            <Border Background="#444444" CornerRadius="15" Margin="10,50,10,10" Padding="10" Panel.ZIndex="0">
                <Border Background="#333333" CornerRadius="10" Padding="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Κύριες Δυνατότητες:" 
                                       Foreground="#FFFFFF" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,10"/>

                            <Border Style="{StaticResource FeatureCardHoverStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE895;" Style="{StaticResource IconStyle}"/>
                                    <TextBlock Text="Ενημέρωση όλων των εφαρμογών μέσω Winget" 
                                               Foreground="#FFFFFF" 
                                               FontSize="16" 
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource FeatureCardHoverStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE74C;" Style="{StaticResource IconStyle}"/>
                                    <TextBlock Text="Καθαρισμός προσωρινών αρχείων και cache και temp files windows" 
                                               Foreground="#FFFFFF" 
                                               FontSize="16" 
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource FeatureCardHoverStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE129;" Style="{StaticResource IconStyle}"/>
                                    <TextBlock Text="Επιδιόρθωση συστηματικών αρχείων με SFC Scan , DISM" 
                                               Foreground="#FFFFFF" 
                                               FontSize="16" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Μετακίνηση του "Σχετικά με την Εφαρμογή" εδώ -->
                            <TextBlock Text="Σχετικά με την Εφαρμογή" 
                                       Foreground="#FFFFFF" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Margin="0,20,0,10"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Foreground="#FFFFFF" 
FontSize="16" 
TextWrapping="Wrap" 
TextAlignment="Center" 
HorizontalAlignment="Center" 
VerticalAlignment="Center" 
Margin="0,0,0,15">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#000000" Opacity="0.5" BlurRadius="5" ShadowDepth="2"/>
                                </TextBlock.Effect>

                             <!-- Γραμμή 1: Ισχυρό εργαλείο -->
                             <Run Text="" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#CCCCCC"/> 
                             <Run Text="Ένα ισχυρό εργαλείο για τον υπολογιστή σας" FontWeight="SemiBold"/>
                             <LineBreak/>

                             <!-- Γραμμή 2: Χρήσιμες λειτουργίες -->
                             <Run Text="" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#CCCCCC"/> 
                             <Run Text="Γεμάτο χρήσιμες λειτουργίες" FontWeight="SemiBold"/>
                             <LineBreak/>

                             <!-- Γραμμή 3: Γρήγορο σύστημα -->
                             <Run Text="" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#CCCCCC"/> 
                             <Run Text="Διατηρεί το σύστημα γρήγορο" FontWeight="SemiBold"/>
                             <LineBreak/>

                             <!-- Γραμμή 4: Καθαρισμός αρχείων -->
                             <Run Text="" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#CCCCCC"/> 
                             <Run Text="Καθαρίζει άχρηστα αρχεία" FontWeight="SemiBold"/>
                             <LineBreak/>

                             <!-- Γραμμή 5: Ενημέρωση & Βελτιστοποίηση -->
                             <Run Text="" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#CCCCCC"/> 
                             <Run Text="Ενημερώστε, επιδιορθώστε και βελτιστοποιήστε εύκολα!" FontWeight="SemiBold"/>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10" VerticalAlignment="Center">
                                <Button Style="{StaticResource WindowButtonStyle}" 
                                        Click="GitHubButton_Click"
                                        Padding="10,5"
                                        Background="#444444"
                                        BorderBrush="#666666"
                                        BorderThickness="1">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    CornerRadius="5"  
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE1D3;" Style="{StaticResource GitHubIconStyle}"/>
                                        <TextBlock Text="Visit My GitHub Profile" 
                                                   Foreground="#FFFFFF" 
                                                   FontSize="16" 
                                                   VerticalAlignment="Center"
                                                   Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Border>
        </Grid>
    </Border>
</Window>