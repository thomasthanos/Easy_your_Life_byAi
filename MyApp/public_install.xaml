<Window x:Class="MyApp.PublicInstallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Public Installer" 
        Height="500" 
        Width="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" 
                                      ShadowDepth="2" 
                                      Color="Black" 
                                      Opacity="0.5"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF005FA3"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF004D80"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#FF2D2D30" CornerRadius="10" Margin="10">
        <Grid>
            <!-- Title Bar -->
            <Border Background="#FF252526" Height="40" VerticalAlignment="Top" CornerRadius="10 10 0 0">
                <TextBlock Text="Public Installer" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           FontSize="16" 
                           FontWeight="Bold"/>
            </Border>

            <!-- Main Content -->
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0">
                <!-- Photoshop Download Button -->
                <Button x:Name="PhotoshopButton" 
                        Content="Download Photoshop" 
                        Width="200" 
                        Height="40" 
                        Margin="0,10" 
                        Style="{StaticResource ModernButton}" 
                        Click="DownloadButton_Click"/>

                <!-- Premiere Pro Download Button -->
                <Button x:Name="PremiereProButton" 
                        Content="Download Premiere Pro" 
                        Width="200" 
                        Height="40" 
                        Margin="0,10" 
                        Style="{StaticResource ModernButton}" 
                        Click="DownloadButton_Click"/>

                <!-- Media Encoder Download Button -->
                <Button x:Name="MediaEncoderButton" 
                        Content="Download Media Encoder" 
                        Width="200" 
                        Height="40" 
                        Margin="0,10" 
                        Style="{StaticResource ModernButton}" 
                        Click="DownloadButton_Click"/>

                <!-- Lightroom Classic Download Button -->
                <Button x:Name="LightroomClassicButton" 
                        Content="Download Lightroom Classic" 
                        Width="200" 
                        Height="40" 
                        Margin="0,10" 
                        Style="{StaticResource ModernButton}" 
                        Click="DownloadButton_Click"/>

                <!-- Illustrator Download Button -->
                <Button x:Name="IllustratorButton" 
                        Content="Download Illustrator" 
                        Width="200" 
                        Height="40" 
                        Margin="0,10" 
                        Style="{StaticResource ModernButton}" 
                        Click="DownloadButton_Click"/>

                <!-- Office 2024 Download Button -->
                <Button x:Name="Office2024Button" 
                        Content="Download Office 2024" 
                        Width="200" 
                        Height="40" 
                        Margin="0,10" 
                        Style="{StaticResource ModernButton}" 
                        Click="DownloadButton_Click"/>

                <!-- Progress Bar -->
                <ProgressBar x:Name="DownloadProgressBar" 
                             Height="20" 
                             Width="300" 
                             Margin="0,20" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>